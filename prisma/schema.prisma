generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Employee {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName   String
  lastName    String
  email       String   @unique
  password    String
  contact     String?   
  createdAt   DateTime @default(now())
}
model Admin {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  firstname   String
  lastname    String
  companyname String
  email       String    @unique
  contact     String    // Changed from Int to String for phone numbers
  password    String
  industrytype String?
  about       About[]   // One-to-many relation with About
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model About {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  about    String?
  DOB      String?
  address  String?
  adminId  String  @db.ObjectId   // Foreign key to Admin
  admin    Admin   @relation(fields: [adminId], references: [id])
}




