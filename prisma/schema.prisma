generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Employee {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName   String
  lastName    String
  email       String   @unique
  password    String
  contact     String?
  assets Assets[]   
  abouts EmployeeAbout[]
  createdAt   DateTime @default(now())
}
model Admin {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  firstname   String
  lastname    String
  companyname String
  email       String    @unique
  contact     String    
  password    String
  industrytype String?
  abouts     AdminAbout[] 
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model About {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  about    String?
  DOB      String?
  address  String?  
  employees    EmployeeAbout[] 
  admins AdminAbout[] 
}

model EmployeeAbout {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  employeeId String   @db.ObjectId
  aboutId    String   @db.ObjectId
  employee   Employee @relation(fields: [employeeId], references: [id])
  about      About    @relation(fields: [aboutId], references: [id])
}

model AdminAbout {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  adminId  String   @db.ObjectId
  aboutId  String   @db.ObjectId
  admin    Admin    @relation(fields: [adminId], references: [id])
  about    About    @relation(fields: [aboutId], references: [id])
}

model Assets{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  assetId Int @unique
  name String
  price String
  imageurl String?
  condition String
  employee  Employee? @relation(fields: [employeeId], references: [id])
  employeeId String? @db.ObjectId 
  category Assetcategory

}
enum Assetcategory {
  LAPTOP
  MOBILE
  ACCESSORIES
}